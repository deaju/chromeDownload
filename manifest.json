{
    "manifest_version": 2,
    "name": "ダウンロードまちこ",
    "description": "ダウンロードを待っている間にキャラクターが出てきます",
	"version": "1.0",
	"permissions": [
		"downloads"
	],
    "content_scripts": [
        {
            "matches": [
				"http://*/*",
				"https://*/*"
			],
			"css":[
				"character.css"
			],
			"js":[
				"vendor/jquery-2.2.4.js",
				"vendor/jquery.easing.1.3.js",
				"character.js"
			],
            "run_at": "document_start"
		}
	],
	"background": {
		"scripts": [
			"download.js"
			]
	},
    "web_accessible_resources": [
		"image/*"
	]
}
